<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="stud1" class="co.edureka.Student1" init-method="myInit1" destroy-method="myDestructor">
		<property name="name" value="Marc"></property>
	</bean>
	<bean id="stud2" class="co.edureka.Student1" init-method="myInit2" destroy-method="myDestructor">
		<constructor-arg value="Papo"></constructor-arg>
	</bean>
</beans>
